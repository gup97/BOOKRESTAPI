{
  "prettier/prettier": [
    "error",
    {
      "singleQuote": true,
      "parser": "flow"
    }
  ],
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "implicit-arrow-linebreak": ["error", "below"]
  },
  "ignorePatterns": ["views", "node_modules/"],
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}
